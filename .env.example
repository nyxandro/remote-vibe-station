# Telegram bot token (обязателен)
TELEGRAM_BOT_TOKEN=<bot_token>

# Short name Mini App из BotFather (опционально, для deep-link вида
# https://t.me/<bot_username>/<short_name>?startapp=...)
TELEGRAM_MINIAPP_SHORT_NAME=<miniapp_short_name>

# Список Telegram ID админов (обязателен)
ADMIN_IDS=<telegram_user_ids>

# Публичный домен для webhook и mini app (обязателен)
PUBLIC_BASE_URL=https://<domain.tld>

# Публичный домен без схемы (обязателен)
PUBLIC_DOMAIN=<domain.tld>

# Email для Let's Encrypt (обязателен)
TLS_EMAIL=<letsencrypt_email>

# Корень проектов на VPS (обязателен)
PROJECTS_ROOT=/srv/projects

# Директория на хосте для данных OpenCode (проекты OpenCode, сессии, сообщения).
# Рекомендуется вынести из репозитория на VPS, например: /opt/opencode-data
OPENCODE_DATA_DIR=/opt/opencode-data

# Опционально: явная директория OpenCode config (AGENTS/agents/skills/plugins/opencode.json)
# В docker-compose используется контейнерный volume (обычно /opencode-config для backend
# и /root/.config/opencode для opencode), поэтому вручную задавать не обязательно.
# OPENCODE_CONFIG_DIR=/opencode-config

# Синк PROJECTS_ROOT -> OpenCode storage/project на старте backend.
# По умолчанию включается, если задан OPENCODE_DATA_DIR.
OPENCODE_SYNC_ON_START=true

# Прогрев списка "Recent projects" в OpenCode (через создание/удаление bootstrap session).
OPENCODE_WARM_RECENTS_ON_START=false
OPENCODE_WARM_RECENTS_LIMIT=50

# Явный выбор модели для OpenCode (опционально). Если не задано, backend возьмет
# дефолт из OpenCode (/config/providers).
# OPENCODE_DEFAULT_PROVIDER_ID=opencode
# OPENCODE_DEFAULT_MODEL_ID=big-pickle

# Если true, `scripts/setup-env.sh` автоматически выставит PROJECTS_ROOT и
# OPENCODE_DATA_DIR относительно домашней директории текущего пользователя:
#   - PROJECTS_ROOT=$HOME/projects
#   - OPENCODE_DATA_DIR=$HOME/opencode-data
USE_DEFAULT_PATHS=true

# OpenCode server URL внутри Docker network (обязателен)
OPENCODE_SERVER_URL=http://opencode:4096

# Backend URL для бота (опционально, если используется docker-compose)
BACKEND_URL=http://backend:3000

# Basic Auth для OpenCode server (опционально, если нужно внешнее подключение)
OPENCODE_SERVER_PASSWORD=<password_or_empty>
OPENCODE_SERVER_USERNAME=opencode
